{
  "name": "boilerplate",
  "version": "1.0.0",
  "main": "index.js",
  "author": "Zhiqi Pan",
  "license": "MIT",
  "scripts": {
    "build:dev": "webpack",
    "build:prod": "webpack -p --env production",
    "dev-server": "webpack-dev-server",
    "test": "cross-env NODE_ENV=test jest --config=jest.config.json",
    "start": "node server/server.js",
    "heroku-postbuild": "yarn run build:prod",
    "lint": "eslint . --ext .js",
    "precommit": "echo '      > Partially staged *.js files will be fully staged and committed\n      > This is the side effect of `git add` after eslint fix\n'; lint-staged"
  },
  "lint-staged": {
    "*.js": [
      "yarn eslint --fix",
      "git add",
      "yarn test --bail --findRelatedTests --silent"
    ]
  },
  "dependencies": {
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-loader": "^7.1.2",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-object-rest-spread": "^6.26.0",
    "babel-polyfill": "^6.26.0",
    "babel-preset-env": "^1.6.1",
    "babel-preset-react": "^6.24.1",
    "css-loader": "^0.28.7",
    "express": "^4.16.2",
    "extract-text-webpack-plugin": "^3.0.2",
    "firebase": "^4.8.2",
    "history": "^4.7.2",
    "moment": "^2.20.1",
    "node-sass": "^4.7.2",
    "normalize.css": "^7.0.0",
    "numeral": "^2.0.6",
    "raf": "^3.4.0",
    "react": "^16.2.0",
    "react-dates": "^16.0.1",
    "react-dom": "^16.2.0",
    "react-modal": "^3.1.11",
    "react-redux": "^5.0.6",
    "react-router-dom": "^4.2.2",
    "redux": "^3.7.2",
    "redux-thunk": "^2.2.0",
    "sass-loader": "^6.0.6",
    "style-loader": "^0.19.1",
    "uuid": "^3.1.0",
    "webpack": "^3.10.0"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "cross-env": "^5.1.3",
    "dotenv": "^4.0.0",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "enzyme-to-json": "^3.3.0",
    "eslint": "^4.16.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.8.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.5.1",
    "husky": "^0.14.3",
    "jest": "^22.0.4",
    "lint-staged": "^6.0.1",
    "react-test-renderer": "^16.2.0",
    "redux-mock-store": "^1.4.0",
    "webpack-dev-server": "^2.10.0"
  }
}
